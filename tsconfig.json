{ 
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": "src",
    "types": ["node"],
    "paths": {
      "components/*": ["components/*"],
      "hooks/*": ["hooks/*"],
      "materials/*": ["materials/*"],
      "shaders/*": ["shaders/*"],
      "stores/*": ["stores/*"],
      "styles/*": ["styles/*"],
      "types/*": ["types/*"]
    }
  },
  "include": ["src"]
}
